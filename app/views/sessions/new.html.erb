<header>
<h1>Sign In</h1>
</header>

<%= form_for(@session) do |f| %>
  <%= render "shared/errors", object: @session %>
  <fieldset>
    <ol>
      <li class="required">
        <%= label(:session, :email) %>
        <%= f.email_field :email, size: 40 %>
      </li>
      <li class="required">
        <%= label(:session, :password) %>
        <%= f.password_field :password, size: 40 %>
      </li>
    </ol>
    <p>
      <%= f.submit 'Sign In' %>
    </p>
  </fieldset>
<% end %>
